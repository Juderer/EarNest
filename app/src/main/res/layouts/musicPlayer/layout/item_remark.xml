<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp">

    <com.earnest.ui.widget.RoundImageView
        android:id="@+id/iv_remark_headImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/timg"/>

    <TextView
        android:id="@+id/tv_remark_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_remark_headImg"
        android:layout_marginLeft="15dp"
        android:text="用户昵称"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:id="@+id/iv_remark_like"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_remark_unlike"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_like_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="17sp"
        android:layout_toLeftOf="@id/iv_remark_like"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"/>

    <TextView
        android:id="@+id/tv_remark_content"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_remark_headImg"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:textSize="15sp"
        android:text="这首歌太好听了！！！！！！！"
        android:maxLines="50"
        android:ellipsize="end"/>
</RelativeLayout>