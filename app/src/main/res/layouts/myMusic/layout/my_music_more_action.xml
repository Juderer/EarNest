<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorMoreAction"
    android:id="@+id/myMusicMoreActionLayout"
    tools:context="com.earnest.ui.home.MainActivity">

    <RelativeLayout
        android:id="@+id/myMusicMoreActionLayout_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_myMusicMoreActionMusicName_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionMusicName"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="歌曲名称"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_myMusicMoreActionMusicName_label"
            android:layout_marginLeft="5dp"
            android:textSize="15sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/myMusicMoreActionLayout_head"
        android:layout_centerHorizontal="true"
        android:background="@color/colorMyMusicdivider"/>

    <RelativeLayout
        android:id="@+id/myMusicMoreActionPlayNext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myMusicMoreActionLayout_head">

        <ImageView
            android:id="@+id/img_myMusicMoreActionPlayNext"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_music_more_action_play_next"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionPlayNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一首播放"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img_myMusicMoreActionPlayNext"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/myMusicMoreActionPlayNext"
        android:layout_alignParentRight="true"
        android:background="@color/colorMyMusicdivider"/>

    <RelativeLayout
        android:id="@+id/myMusicMoreActionCollect"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myMusicMoreActionPlayNext">

        <ImageView
            android:id="@+id/img_myMusicMoreActionCollect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_music_more_action_collect"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏到歌单"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_myMusicMoreActionCollect"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/myMusicMoreActionCollect"
        android:layout_alignParentRight="true"
        android:background="@color/colorMyMusicdivider"/>

    <RelativeLayout
        android:id="@+id/myMusicMoreActionRemark"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myMusicMoreActionCollect">

        <ImageView
            android:id="@+id/img_myMusicMoreActionRemark"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_music_more_action_remark"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_myMusicMoreActionRemark"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/myMusicMoreActionRemark"
        android:layout_alignParentRight="true"
        android:background="@color/colorMyMusicdivider"/>

    <RelativeLayout
        android:id="@+id/myMusicMoreActionShare"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myMusicMoreActionRemark">

        <ImageView
            android:id="@+id/img_myMusicMoreActionShare"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_music_more_action_share"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_myMusicMoreActionShare"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:layout_below="@id/myMusicMoreActionShare"
        android:layout_alignParentRight="true"
        android:background="@color/colorMyMusicdivider"/>

    <RelativeLayout
        android:id="@+id/myMusicMoreActionDelete"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/myMusicMoreActionShare">

        <ImageView
            android:id="@+id/img_myMusicMoreActionDelete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="11dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_my_music_more_action_delete"/>

        <TextView
            android:id="@+id/tv_myMusicMoreActionDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textSize="20sp"
            android:layout_toRightOf="@id/img_myMusicMoreActionDelete"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>