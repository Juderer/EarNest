<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_item_my_favourite_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/tv_item_my_favourite_num"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/tv_item_my_favourite_musicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="musicName"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_item_my_favourite_musicSinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="singer"
            android:layout_marginTop="3dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_item_my_favourite_mv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@id/imgbtn_item_my_favourite_action"
        android:src="@drawable/ic_mv"/>

    <ImageButton
        android:id="@+id/imgbtn_item_my_favourite_action"
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_my_music_list_item_action"
        android:background="#00000000"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="0.5dp"
        android:background="@color/colorMyFavouriteMusicListItemDivider"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>