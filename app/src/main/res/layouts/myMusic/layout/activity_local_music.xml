<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.earnest.ui.myMusic.LocalMusicActivity">

    <RelativeLayout
        android:id="@+id/localMusicHead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorLocalMusicTitle"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_localMusicBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/local_music_back"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地音乐"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/imgbtn_localMusicBack"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/localMusicHead2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/localMusicHead">

        <ImageView
            android:id="@+id/iv_localMusicPlayAll"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:src="@drawable/ic_local_music_play_all"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_localMusicPlayAll"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_localMusicList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/localMusicHead2"
        ></ListView>

    <include
    android:id="@+id/local_music_bottomMusicPlayer"
    layout="@layout/bottom_music_player" />

</RelativeLayout>
