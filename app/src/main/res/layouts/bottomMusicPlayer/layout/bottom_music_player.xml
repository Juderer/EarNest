<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomPlayer"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_alignParentBottom="true"
    android:background="@color/colorBottomPlayer">



    <ImageView
        android:id="@+id/iv_bottomPlayerImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_default_song_music"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_bottomPlayerImg"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/tv_bottomPlayerMusicName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorBottomPlayerMusicName"
            android:singleLine="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:text="未播放歌曲" />

        <TextView
            android:id="@+id/tv_bottomPlayerLyrics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认过眼神，我遇上对的人"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"  />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_bottomPlayerPlay"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toLeftOf="@id/iv_bottomPlayerList"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/bottomplayerpause" />

    <ImageView
        android:id="@+id/iv_bottomPlayerList"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/bottomplayerlist" />

</RelativeLayout>