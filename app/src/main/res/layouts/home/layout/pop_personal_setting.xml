<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="fill_parent"
    android:background="@color/app.color.background"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/re_personalsetting_head"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/personalsettingbackground"/>


        <com.earnest.ui.widget.RoundImageView
            android:id="@+id/iv_personalsetting_headimg"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/timg" />

        <TextView
            android:id="@+id/tv_personalsetting_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_personalsetting_share"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/re_personalsetting_head"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_pesonalsetting_share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_personalsetting_share"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pesonalsetting_share"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_personalsetting_help"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/re_personalsetting_share"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_pesonalsetting_help"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_personalsetting_help"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pesonalsetting_help"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_personalsetting_about"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/re_personalsetting_help"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_pesonalsetting_about"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_personalsetting_about"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于耳窝"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_pesonalsetting_about"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <!--<View
        android:layout_width="280dp"
        android:layout_height="0.5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@color/colorPersonalSettingdivider"/>-->

    <RelativeLayout
        android:id="@+id/re_personalsetting_exit"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_pesonalsetting_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退  出"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toLeftOf="@id/tv_pesonalsetting_exit"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_personalsetting_exit"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


</RelativeLayout>
