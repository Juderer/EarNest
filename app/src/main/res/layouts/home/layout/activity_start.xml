<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.earnest.ui.home.StartActivity">

    <TextView
        android:id="@+id/start_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="耳   窝"
        android:textSize="50sp"
        android:textColor="#ff0000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tv_Start_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号登录"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_title"
        android:layout_marginTop="100dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_Start_Login"
        android:layout_marginTop="5dp"
        android:background="@color/colorBottomMusicListDivider1"/>

    <TextView
        android:id="@+id/tv_Start_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_Start_Login"
        android:text="注册"
        android:textSize="20sp"
        android:layout_marginTop="25dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_Start_Register"
        android:layout_marginTop="5dp"
        android:background="@color/colorBottomMusicListDivider1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="--其他登录方式--"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/iv_Start_QQ"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/qq"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_Start_Weixin"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/weixin"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_Start_Weibo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/weibo"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</RelativeLayout>
