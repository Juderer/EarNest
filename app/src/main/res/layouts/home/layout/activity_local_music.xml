<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.earnest.ui.myMusic.LocalMusicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorLocalMusicTitle"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_localMusicBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/local_music_back"
            android:background="#00000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地音乐"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_localMusicPlayAll"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#00000000"
            android:src="@drawable/ic_local_music_play_all"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播放全部"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_localMusicList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
